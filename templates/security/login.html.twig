{% extends 'visitor_base.html.twig' %}

{% block title %}Hello InscriptionController!{% endblock %}
{% block stylesheets %}
  <link href="{{asset('admin/vendor/fontawesome-free/css/all.min.css')}}" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
       
     <!-- Custom styles for this template-->
      <link href="{{asset('admin/css/sb-admin-2.min.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
  <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            {# <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> #}
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Connexion!</h1>

                                    </div>
                                     {% if error %}
                                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <form class="user" action="{{ path('app_login') }}" method="post">
                                        <div class="form-group">
                                            <input type="email" name="_username" value="{{ last_username }}" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="_password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Password">
                                        </div>
                                                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                {# If you want to control the URL the user is redirected to on success#}
                                                {# <input type="hidden" name="_target_path" value="/account"/>  #}

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Souvenir de moi</label>
                                            </div>
                                        </div>
                                          <button type="submit" class="btn btn-primary btn-user btn-block">login</button>
                                       
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">mot de passe oubli√©?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{path('inscription')}}">Nouveau compte!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
     <!-- Bootstrap core JavaScript-->
    <script src="{{asset('admin/vendor/jquery/jquery.min.js')}}"></script>
    <script src="{{asset('admin/vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{asset('admin/vendor/jquery-easing/jquery.easing.min.js')}}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{asset('admin/js/sb-admin-2.min.js')}}"></script>
{% endblock %}
