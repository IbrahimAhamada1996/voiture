{% extends 'admin_base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block stylesheets %}
  <link href="{{asset('admin/vendor/fontawesome-free/css/all.min.css')}}" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
       
     <!-- Custom styles for this template-->
      <link href="{{asset('admin/css/sb-admin-2.min.css')}}" rel="stylesheet">
          <link rel="stylesheet" href="{{asset('bootstrap-5.0.2-dist/css/bootstrap.min.css')}}">
{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    {# <div class="col-lg-5 d-none d-lg-block bg-register-image"></div> #}
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Cr√©er un compte!</h1>
                                 
                            </div>
                            {# <pre>
                                {{ dump(form) }}
                            </pre> #}
                         {% include "layout/_message_flash.html.twig" %}
                            {# <form class="user" method="post"> #}
                            {{ form_start(form) }}
                                
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {# <input type="text" class="form-control form-control-user" id="exampleFirstName"
                                            placeholder="First Name"> #}
                                        {{ form_row(form.user.nom) }}
                                    </div>
                                    <div class="col-sm-6">
                                            {{ form_row(form.user.prenom) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                      
                                            {{ form_row(form.user.adresse) }}
                                    </div>
                                    <div class="col-sm-6">
                                            {{ form_row(form.user.phone) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                      
                                            {{ form_row(form.user.email) }}
                                    </div>
                                    <div class="col-sm-6">
                                            {{ form_row(form.user.sex) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                            {{ form_row(form.user.password) }}
                                    </div>
                                </div>
                               <button class="submit" class="btn btn-primary btn-user btn-block">Enregistrer</button>
                             {{ form_end(form) }}
                           
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>
{% endblock %}
